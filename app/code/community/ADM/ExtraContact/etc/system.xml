<?xml version="1.0"?>
<config>
    <sections>
        <contacts>
            <groups>
                <ExtraContact translate="label">
                    <label>Extra Contact</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>60</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Activer le module</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <validate>required-entry</validate>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <presentation translate="label">
                            <label>Présentation</label>
                            <comment>Origine du texte de présenation</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>ExtraContact/adminhtml_system_config_source_presentation_origin</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </presentation>
                        <presentationText translate="label">
                            <label>Texte libre</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                            <depends><presentation>2</presentation></depends>
                        </presentationText>
                        <presentationCMS translate="label">
                            <label>Identifiant du bloc CMS</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                            <depends><presentation>1</presentation></depends>
                        </presentationCMS>
                        <country translate="label">
                            <label>Active la gestion du pays</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </country>
                        <order translate="label">
                            <label>Active la gestion du numéro de commande</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order>  
                        <captcha translate="label">
                            <label>Active le captcha</label>
                            <comment>Si l'utilisateur n'est pas connecté</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </captcha>
                        <config translate="label">
                            <label>Configuration</label>
                            <comment>Chaine JSON de configuration contenant les informations suivantes : sujets des messages, emails de destination, textes d'introduction</comment>
                            <frontend_type>text</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <validate>required-entry</validate>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </config>
                        <acknowledgment translate="label">
                            <label>Accusé de réception</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>90</sort_order>
                            <validate>required-entry</validate>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </acknowledgment>
                    </fields>              
                </ExtraContact>
            </groups>
        </contacts>
    </sections>
</config>